# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[{*.yaml,*.yml}]
trim_trailing_whitespace = false
indent_size = 2

[*sh]
indent_style = space
indent_size = 2

[*.py]
trim_trailing_whitespace = false
indent_size = 2

[*.html]
trim_trailing_whitespace = false
indent_size = 2

[*.md]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
trim_trailing_whitespace = true
indent_size = 2

[*.html]
trim_trailing_whitespace = false
indent_size = 2

[*.scss]
trim_trailing_whitespace = true
indent_size = 2

[*.json]
trim_trailing_whitespace = true
indent_size = 2

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
